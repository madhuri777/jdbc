package jdbc;

import java.sql.*;
import com.mysql.jdbc.Statement;

public class PreperedStatement {

	public static void main(String[] args) throws ClassNotFoundException {
             Connection cn;
             Statement st;
             ResultSet rs;
		try {
			Class.forName("com.mysql.jdbc.Driver");
			cn=DriverManager.getConnection("jdbc:mysql://localhost:3306/satkar","root","root");
			PreparedStatement pr=cn.prepareStatement("insert into persons values(?,?,?,?,?)");
            pr.setString(1,"gauri"); 
            pr.setInt(2,22);
            pr.setString(3,"thana");
            pr.setString(4,"maharastra");
            pr.setInt(5,10000);
            int i=pr.executeUpdate();
            System.out.println(i+"record Inserted");
            cn.close();
		}catch(Exception e) {
			System.out.println(e);
		}
	}

}
